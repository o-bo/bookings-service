{
  "name": "bookings-service",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "start": "npm run build && node build/infrastructure/api/http/index.js",
    "build": "rimraf ./coverage && rimraf ./build && tsc",
    "start:dev": "nodemon",
    "prestart:dev": "npm run knex:migrate:latest",
    "prestart": "npm run knex:migrate:latest",
    "test": "NODE_ENV=test jest --testPathIgnorePatterns=\"e2e.test.(j|t)s\" --watchAll",
    "e2eTests": "NODE_ENV=test npm run pretest && jest --forceExit --runInBand -- e2e.test.ts",
    "pretest": "NODE_ENV=test npm run knex:migrate:latest",
    "knex:migrate:make": "knex --knexfile src/infrastructure/spi/storage/postgres/knexfile.ts migrate:make -x ts",
    "knex:migrate:latest": "knex --knexfile src/infrastructure/spi/storage/postgres/knexfile.ts migrate:latest",
    "knex:migrate:rollback": "knex --knexfile src/infrastructure/spi/storage/postgres/knexfile.ts migrate:rollback"
  },
  "dependencies": {
    "express": "~4.16.1",
    "install": "^0.13.0",
    "inversify": "^6.0.1",
    "knex": "^0.95.11",
    "morgan": "~1.9.1",
    "npm": "^8.1.0",
    "pg": "^8.7.1",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "shallow-equal-object": "^1.1.1",
    "sqlite3": "^5.0.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.3",
    "@types/mocha": "^9.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.7",
    "@types/pg": "^8.6.1",
    "@types/redis": "^2.8.32",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.4",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "jest": {
    "collectCoverage": true,
    "transform": {
      "\\.(ts)$": "ts-jest"
    },
    "setupFiles": [
      "./src/_ioc/ioc.config.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageProvider": "v8"
  }
}
