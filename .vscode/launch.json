  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Program",
      "program": "${workspaceFolder}/src/infrastructure/api/http/index.ts",
      "preLaunchTask": "npm: build",
      "outFiles": ["${workspaceFolder}/build/**/*.js"]
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Debug Tests",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Debug Integration Tests",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": [
        "--forceExit",
        "--runInBand",
        "--", 
        "integration.test.ts"
      ],
      "env": {
        "NODE_ENV": "test"
      }
    }
  ]
}